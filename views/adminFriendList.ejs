<script>
  $('.removeUserBtn').on('click',function(){
      //触发删除事件，这时应向后台发送请求去删除这个用户
      var r = confirm('是否确定删除该用户');
      var username  = $(this).data('username');
      if(r){
         $.ajax({
             type:'post',
             url :'/removeUser',
             dataType:'json',
             data:{
                 username:username
             },
             success:function (data) {
                 alert(data.msg);
                 window.location.reload();
             },
             error:function(error){
                 alert(error);
             }

         })
      }
  });
</script>


