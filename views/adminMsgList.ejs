<script>
    $(function () {
        $('#searchMsg').on('click', function (event) {
            var sendMsg = $('#sendMsg').val();
            var acceptMsg = $('#acceptMsg').val();
            $.ajax({
                type: 'post',
                dataType: 'json',
                data: {sendMsg: sendMsg, acceptMsg: acceptMsg},
                url: '/msgList',
                success: function (data) {
                    alert('success');
                },
                error: function (error) {
                    alert(error);
                }
            });
        })
    })
</script>


</html>

